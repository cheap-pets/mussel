.mu-badge {
  display: inline-block;
  height: 1rem;
  min-width: 1.5rem;
  line-height: 1rem;
  padding: 0 4px;
  /* vertical-align: middle; */
  font-size: 0.8rem;
  border-radius: 0.5rem;
  background: $normalDarkGreyBackground;
  color: #fff;

  &[badge-type=primary] {
    background: var(--mu-primary-color);
  }

  &[badge-type=success] {
    background: var(--mu-success-color);
  }

  &[badge-type=warning] {
    background: var(--mu-warning-color);
  }

  &[badge-type=danger] {
    background: var(--mu-danger-color);
  }
}
